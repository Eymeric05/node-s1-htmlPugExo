extends ./layout/layout

block content
    div.container
        h1 Contactez-moi
        p N'hésitez pas à me contacter pour toute question ou collaboration.
        
        form.contact-form(action="/contact-me" method="POST")
            div.form-group
                label(for="email") Email
                input#email(type="email" name="email" required placeholder="votre@email.com")
            
            div.form-group
                label(for="message") Message
                textarea#message(name="message" required placeholder="Votre message..." rows="6")
            
            button.btn-submit(type="submit") Envoyer le message

block script
    script(src="/js/contact.js")
